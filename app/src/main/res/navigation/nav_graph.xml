<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mandeep.chatapplication2.fragment.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            />
        <action
            android:id="@+id/action_loginFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.mandeep.chatapplication2.fragment.SignupFragment"
        android:label="SignupFragment"
        >
        <action
            android:id="@+id/action_signupFragment_to_usersFragment"
            app:destination="@id/usersFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/usersFragment"
        android:name="com.mandeep.chatapplication2.fragment.UsersFragment"
        android:label="UsersFragment" >
        <action
            android:id="@+id/action_usersFragment_to_chatsFragment"
            app:destination="@id/chatsFragment" />
        <action
            android:id="@+id/action_usersFragment_to_storyFragment"
            app:destination="@id/storyFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/storyFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.mandeep.chatapplication2.fragment.ChatsFragment"
        android:label="ChatsFragment" />
    <fragment
        android:id="@+id/storyFragment"
        android:name="com.mandeep.chatapplication2.fragment.StoryFragment"
        android:label="fragment_story"
        tools:layout="@layout/fragment_story" >
        <action
            android:id="@+id/action_storyFragment_to_storyPresentationFragment"
            app:destination="@id/storyPresentationFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyPresentationFragment"
        android:name="com.mandeep.chatapplication2.fragment.StoryPresentationFragment"
        android:label="StoryPresentationFragment" >
        <action
            android:id="@+id/action_storyPresentationFragment_to_storyFragment"
            app:destination="@id/storyFragment"
            app:popUpTo="@id/storyFragment"
            app:popUpToInclusive="true"
            app:popUpToSaveState="true"/>
    </fragment>
</navigation>